@model IEnumerable<DongHoDemo2.Models.Order>

@{
    ViewData["Title"] = "Shipper Index";
    Layout = "~/Areas/Shipper/Views/Shared/_ShipperLayout.cshtml";
}
<div class="header">
    <h1 class="page-header">
        Danh sách đơn hàng
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Shipper" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    </ol>
</div>
<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="card">
            <div class="card-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Họ tên</th>
                                <th>Ngày đặt</th>
                                <th>Địa chỉ</th>
                                <th>Trạng thái</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                            <tr class="odd gradeX">
                                <td>@item.OrderId</td>
                                <td>@item.Customer.FullName</td>
                                <td>@item.OrderDate</td>
                                <td>@item.Customer.Address</td>
                                <td>@item.TransactStatus.Status</td>
                                <td>
                                    <a class="btn btn-secondary btn-tone m-r-5" asp-area="Shipper" asp-controller="Home" asp-action="Edit" asp-route-id="@item.OrderId">Xem đơn hàng</a>
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>