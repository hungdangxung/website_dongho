@model IEnumerable<DongHoDemo2.Models.Category>

@{
    ViewData["Title"] = "Category Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="header">
    <h1 class="page-header">
        Danh sách danh mục sản phẩm
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li><a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">Quản lý danh mục sản phẩm</a></li>
    </ol>
</div>
<div class="card">
    <div class="card-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên danh mục</th>
                        <th>Ảnh đại diện</th>
                        <th style="max-width: 150px">Mô tả</th>
                        <th>Số lượng sản phẩm</th>
                        <td>Khuyến mại</td>
                        <th style="min-width: 170px">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CatId</td>
                                <td>@item.CatName</td>
                                <td>
                                    <img width="100" height="100" src="~/images/categories/@item.Thumb" alt="@item.CatName" />
                                </td>
                                <td>@item.Desciption</td>
                                <td>@item.Products.Count()</td>
                                @if (item.PromotionId != null)
                                {
                                    <td>@item.Promotion.PromotionName</td>
                                }
                                else
                                {
                                    <td>Không khuyến mại</td>
                                }
                                <td>
                                    <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminCategories" asp-action="Details" asp-route-id="@item.CatId">Xem</a>
                                    <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@item.CatId">Sửa</a>
                                    <a class="btn btn-dark btn-tone m-r-5 disabled" asp-area="Admin" asp-controller="AdminCategories" asp-action="Delete" asp-route-id="@item.CatId">Xóa</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>