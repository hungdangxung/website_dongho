@{
    ViewData["Title"] = "Admin Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Order> listOrdereds = ViewBag.listOrdereds;
    List<Order> listDayOrdereds = ViewBag.listDayOrdereds;
    List<Order> listMonthOrdereds = ViewBag.listMonthOrdereds;
    List<Order> list3MonthOrdereds = ViewBag.list3MonthOrdereds;
    List<Order> listYearOrdereds = ViewBag.listYearOrdereds;
    List<Order> listOrders = ViewBag.listOrders;
    List<Product> listProducts = ViewBag.listProducts;
    List<Customer> listCustomers = ViewBag.listCustomers;
}
<div class="header">
    <h1 class="page-header">
        TỔNG QUAN
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a>
    </ol>
</div>
<div id="page-inner">
    <div class="dashboard-cards">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-3">
                <div class="card horizontal cardIcon waves-effect waves-dark">
                    <div class="card-image red">
                        <i class="material-icons dp48">import_export</i>
                    </div>
                    <div class="card-stacked red">
                        <div class="card-content">
                            @if (listOrdereds != null)
                            {
                                <h3>@listOrdereds.Sum(x => x.Total).Value.ToString("#,##0") VNĐ</h3>
                            }
                            else
                            {
                                <h3>0 VNĐ</h3>
                            }
                        </div>
                        <div class="card-action">
                            <strong>DOANH THU</strong>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">

                <div class="card horizontal cardIcon waves-effect waves-dark">
                    <div class="card-image orange">
                        <i class="material-icons dp48">shopping_cart</i>
                    </div>
                    <div class="card-stacked orange">
                        <div class="card-content">
                            @if (listOrders != null)
                            {
                                <h3>@listOrders.Count()</h3>
                            }
                            else
                            {
                                <h3>0</h3>
                            }
                        </div>
                        <div class="card-action">
                            <strong>ĐƠN HÀNG</strong>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">

                <div class="card horizontal cardIcon waves-effect waves-dark">
                    <div class="card-image blue">
                        <i class="material-icons dp48">equalizer</i>
                    </div>
                    <div class="card-stacked blue">
                        <div class="card-content">
                            @if (listProducts != null)
                            {
                                <h3>@listProducts.Count()</h3>
                            }
                            else
                            {
                                <h3>0</h3>
                            }
                        </div>
                        <div class="card-action">
                            <strong>SẢN PHẨM</strong>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">

                <div class="card horizontal cardIcon waves-effect waves-dark">
                    <div class="card-image green">
                        <i class="material-icons dp48">supervisor_account</i>
                    </div>
                    <div class="card-stacked green">
                        <div class="card-content">
                            @if (listCustomers != null)
                            {
                                <h3>@listCustomers.Count()</h3>
                            }
                            else
                            {
                                <h3>0</h3>
                            }
                        </div>
                        <div class="card-action">
                            <strong>KHÁCH HÀNG</strong>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- /. ROW  -->
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-7">
            <div class="cirStats">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="card-panel text-center">
                            <h4>DOANH THU HÔM NAY</h4>
                            @if (listDayOrdereds != null)
                            {
                                <h4 style="color: dodgerblue"><b>@listDayOrdereds.Sum(x => x.Total).Value.ToString("#,##0") VNĐ </b></h4>
                                <div class="easypiechart" id="easypiechart-blue" data-percent="72">
                                    <span class="percent"><i class="material-icons dp48">trending_up</i>72%</span>
                                </div>
                            }
                            else
                            {
                                <div class="easypiechart" id="easypiechart-blue" data-percent="0">
                                    <span class="percent">0 VNĐ</span>
                                </div>
                            }


                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="card-panel text-center">
                            <h4>DOANH THU THÁNG NÀY</h4>
                            @if (listMonthOrdereds != null)
                            {
                                <h4 style="color: red">@listMonthOrdereds.Sum(x => x.Total).Value.ToString("#,##0") VNĐ</h4>
                                <div class="easypiechart" id="easypiechart-red" data-percent="46">
                                    <span class="percent"><i class="material-icons dp48">trending_up</i>46%</span>
                                </div>
                            }
                            else
                            {
                                <div class="easypiechart" id="easypiechart-red" data-percent="0">
                                    <span class="percent">0 VNĐ</span>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="card-panel text-center">
                            <h4>DOANH THU QUÝ</h4>
                            <h4 style="color: teal">@listMonthOrdereds.Sum(x => x.Total).Value.ToString("#,##0") VNĐ</h4>
                            <div class="easypiechart" id="easypiechart-teal" data-percent="60">
                                <span class="percent"><i class="material-icons dp48">trending_up</i>60%</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="card-panel text-center">
                            <h4>DOANH THU NĂM</h4>
                            @if (listYearOrdereds != null)
                            {
                                <h4 style="color: orange">@listYearOrdereds.Sum(x => x.Total).Value.ToString("#,##0") VNĐ</h4>
                                <div class="easypiechart" id="easypiechart-orange" data-percent="55">
                                    <span class="percent"><i class="material-icons dp48">trending_up</i>55%</span>
                                </div>
                            }
                            else
                            {
                                <div class="easypiechart" id="easypiechart-red" data-percent="0">
                                    <span class="percent">0 VNĐ</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/.row-->
        <div class="col-xs-12 col-sm-12 col-md-5">
            <div class="row">
                <div class="col-xs-12 col-12">
                    <div class="card">
                        <div class="card-image donutpad">
                            <div id="morris-donut-chart"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/.row-->
    </div>

    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-image">
                    <div id="morris-line-chart"></div>
                </div>
                <div class="card-action">
                    <b>Line Chart</b>
                </div>
            </div>

        </div>

        <div class="col-md-7">
            <div class="card">
                <div class="card-image">
                    <div id="morris-bar-chart"></div>
                </div>
                <div class="card-action">
                    <b> Bar Chart Example</b>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-image">
                    <div id="morris-area-chart"></div>
                </div>
                <div class="card-action">
                    <b>Area Chart</b>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

        </div>
    </div>
    <!-- /. ROW  -->
    <footer>
    </footer>
</div>