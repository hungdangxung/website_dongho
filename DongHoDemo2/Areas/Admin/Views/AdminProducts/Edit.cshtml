@model DongHoDemo2.Models.Product

@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    Category cate = ViewBag.Cate;
    Color color = ViewBag.Color;
}
<div class="header">
    <h1 class="page-header">
        Cập nhật sản phẩm
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li><a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Quản lý sản phẩm</a></li>
        <li><a asp-area="Admin" asp-controller="AdminProducts" asp-action="Create">Cập nhật sản phẩm</a></li>
    </ol>
</div>
<form asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@Model.ProductId" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="Thumb" />
    <input type="hidden" asp-for="Discount" />
    <input type="hidden" asp-for="DateCreated" />
    <div class="card">
        <div class="card-content">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <tbody>
                        <tr>
                            <td> <b>Danh mục sản phẩm:</b></td>
                            <td> <select asp-for="CatId" class="form-control" asp-items="ViewBag.CatId"></select></td>
                        </tr>
                        <tr>
                            <td> <b>Tên sản phẩm:</b></td>
                            <td> <input type="text" class="form-control" asp-for="ProductName" placeholder="Tên sản phẩm"></td>
                        </tr>
                        <tr>
                            <td> <b>Thương hiệu:</b></td>
                            <td> <input type="text" class="form-control" asp-for="BrandName" placeholder="Thương hiệu"></td>
                        </tr>
                        <tr>
                            <td> <b>Màu sắc:</b></td>
                            <td> <select asp-for="ColorId" class="form-control" asp-items="ViewBag.ColorId"></select></td>
                        </tr>
                        <tr>
                            <td> <b>Giá bán:</b></td>
                            <td> <input type="text" class="form-control" asp-for="Price" placeholder="Giá bán"></td>
                        </tr>
                        @*<tr>
            <td> <b>Giá khuyến mại:</b></td>
            <td> <input type="text" class="form-control" asp-for="Discount" placeholder="Giá giảm"></td>
        </tr>*@
                        <tr>
                            <td> <b>Ảnh sản phẩm:</b></td>
                            <td>
                                <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb">
                                <span asp-validation-for="Thumb" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td> <b>Số lượng:</b></td>
                            <td> <input type="text" class="form-control" asp-for="UnitslnStock" placeholder="Số lượng"></td>
                        </tr>
                        <tr>
                            <td> <b>Mô tả:</b></td>
                            <td> <input type="text" class="form-control" asp-for="Description" placeholder="Mô tả"></td>
                        </tr>
                        @*@if (Model.Cat.PromotionId != null)
        {
            Model.Discount = Model.Price.Value - cate.Promotion.PromotionPrice.Value;
        }*@
                    </tbody>
                </table>
            </div>
            <a class="btn btn-success btn-group m-md-3" asp-action="Index">Quay lại</a>
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        </div>
    </div>
</form>

