@model DongHoDemo2.Models.Account

@{
    ViewData["Title"] = "Cập nhật tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="header">
    <h1 class="page-header">
        Cập nhật tài khoản
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li><a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index">Quản lý tài khoản</a></li>
        <li><a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Edit">Cập nhật tài khoản</a></li>
    </ol>
</div>
<form asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@Model.AccountId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AccountId" />
    @*<input type="hidden" asp-for="FullName" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Phone" />*@
    <input type="hidden" asp-for="Active" />
    <div class="card">
        <div class="card-content">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <tbody>
                        <tr>
                            <td> <b>Họ tên: </b></td>
                            <td> <input type="text" class="form-control" asp-for="FullName" id="inputFullName" placeholder="Họ tên"></td>
                        </tr>
                        <tr>
                            <td> <b>Email: </b></td>
                            <td> <input type="email" class="form-control" asp-for="Email" placeholder="Địa chỉ Email"></td>
                        </tr>
                        <tr>
                            <td> <b>Số điện thoại:</b></td>
                            <td> <input type="tel" id="inputPhone" asp-for="Phone" placeholder="Số điện thoại"></td>
                        </tr>
                        <tr>
                            <td> <b>Mật khẩu:</b></td>
                            <td> <input type="password" id="inputPass" asp-for="Password" placeholder="Mật khẩu"></td>
                        </tr>
                        <tr>
                            <td> <b>Quyền truy cập:</b></td>
                            <td> <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select></td>
                        </tr>
                        <tr>
                            <td> <b>Trạng thái:</b></td>
                            <td> <input type="text" asp-for="Active" placeholder="Trạng thái"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <a class="btn btn-success btn-group m-md-3" asp-action="Index">Quay lại</a>
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        </div>
    </div>
</form>
