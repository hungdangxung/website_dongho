@model DongHoDemo2.Models.Promotion

@{
    ViewData["Title"] = "Xóa khuyến mại";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="header">
    <h1 class="page-header">
        Xóa khuyến mại
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li><a asp-area="Admin" asp-controller="AdminPromotions" asp-action="Index">Quản lý khuyến mại</a></li>
        <li><a asp-area="Admin" asp-controller="AdminPromotions" asp-action="Delete">Xóa khuyến mại</a></li>
    </ol>
</div>
<div class="card">
    <div class="card-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <tbody>
                    <tr>
                        <td><b> ID:</b> </td>
                        <td> @Model.PromotionId</td>
                    </tr>
                    <tr>
                        <td> <b>Tên khuyến mại:</b></td>
                        <td> @Model.PromotionName</td>
                    </tr>
                    <tr>
                        <td> <b>Giá trị khuyến mại:</b></td>
                        <td> @Model.PromotionPrice</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <form asp-action="Delete" asp-route-id="@Model.PromotionId">
            <a class="btn btn-success btn-group m-md-3" asp-action="Index">Quay lại</a>
            <input type="hidden" asp-for="PromotionId" />
            <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
        </form>
    </div>
</div>
