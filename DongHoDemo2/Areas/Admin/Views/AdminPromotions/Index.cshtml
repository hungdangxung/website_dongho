@model IEnumerable<DongHoDemo2.Models.Promotion>

@{
    ViewData["Title"] = "Promotion Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="header">
    <h1 class="page-header">
        Quản lý khuyến mại
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li><a asp-area="Admin" asp-controller="AdminPromotions" asp-action="Index">Quản lý khuyến mại</a></li>
    </ol>
</div>
<div class="card">
    <div class="card-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên khuyến mại</th>
                        <th>Giá trị khuyến mại</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PromotionId</td>
                                <td>@item.PromotionName</td>
                                <td>@item.PromotionPrice</td>
                                <td>
                                    <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminPromotions" asp-action="Details" asp-route-id="@item.PromotionId">Xem</a>
                                    <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminPromotions" asp-action="Edit" asp-route-id="@item.PromotionId">Sửa</a>
                                    <a class="btn btn-dark btn-tone m-r-5 disabled" asp-area="Admin" asp-controller="AdminPromotions" asp-action="Delete" asp-route-id="@item.PromotionId">Xóa</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
